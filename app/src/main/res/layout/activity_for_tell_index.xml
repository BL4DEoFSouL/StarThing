<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bl4deofsoul.starthing.ForTellIndex">

    <Spinner
        android:id="@+id/yearSpinner"
        android:layout_width="96dp"
        android:layout_height="43dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="15dp"
        android:addStatesFromChildren="false"
        app:layout_constraintLeft_toRightOf="@+id/monthSpinner"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Spinner
        android:id="@+id/monthSpinner"
        android:layout_width="96dp"
        android:layout_height="43dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="15dp"
        android:addStatesFromChildren="false"
        app:layout_constraintLeft_toRightOf="@+id/dateSpinner"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Spinner
        android:id="@+id/dateSpinner"
        android:layout_width="96dp"
        android:layout_height="43dp"
        android:addStatesFromChildren="false"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_marginLeft="37dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="Choose Birth Date"
        android:textAlignment="center"
        android:textSize="36sp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/forTellSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="148dp"
        android:layout_marginTop="83dp"
        android:onClick="fortellSubmit"
        android:text="Submit"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/TestText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TestText"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/forTellSubmit"
        tools:layout_editor_absoluteX="162dp" />
</android.support.constraint.ConstraintLayout>
