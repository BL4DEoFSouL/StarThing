<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.l2ever5e.starthings.MainActivity">

    <Button
        android:id="@+id/Tips"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="TIPS"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/StarLocation" />

    <Button
        android:id="@+id/StarToNum"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="CONVERT STAR TO NUMBERING"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NumToStar" />

    <Button
        android:id="@+id/FortuneTelling"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="ZODIAC FORTUNE TELLING"
        tools:layout_editor_absoluteX="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/StarToNum" />

    <Button
        android:id="@+id/StarLocation"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="STAR LOCATION"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/FortuneTelling" />

    <Button
        android:id="@+id/NumToStar"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:onClick="ChangePage"
        android:text="Convert Numbering to Star"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="125dp" />
</android.support.constraint.ConstraintLayout>
